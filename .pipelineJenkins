pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat "build.bat"
            }
        }

        stage('Tests') {
            steps {
                bat "tests.bat"
            }
        }

        stage('Archive') {
            steps {
                script {
                    zip zipFile: env.BUILD_NUMBER.toString() + '.zip', dir: 'JenkinsTest\\JenkinsTest\\bin\\Debug'
                }
            }
        }

        stage('Unarchive') {
            steps {
                unzip zipFile: env.BUILD_NUMBER.toString() + '.zip', dir: 'E:\\deploy\\' + env.BUILD_NUMBER.toString()
            }
        }
    }
}
